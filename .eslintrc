{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "globals": {
    "PROJECT_ENV": true
  },
  "rules": {
    "arrow-body-style": 0,
    "arrow-parens": [2, "as-needed"],
    "comma-dangle": 0,
    "eol-last": 1,
    "indent": [2, 4],
    "linebreak-style": 0,
    "max-len": 0,
    "no-confusing-arrow": 0,
    "no-console": 1,
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "react/jsx-indent": [2, 4],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-space-before-closing": 1,
    "react/prefer-stateless-function": 1
  }
}
